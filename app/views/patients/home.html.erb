<section class="p-4 container centered-card">
  <div class="row p-lg-5 bg-dark rounded">
    <h1 class="text-center">Set Home Address</h1>
    <%= form_with(model: @patient.locations, local: true) do |form| %>
    <div class="row py-2">
      <div class="form-group col-md">
        <%= form.label :name, "Address Nickname" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group col-md">
        <%= form.label :addr1, "Address" %>
        <%= form.text_field :addr1, class: "form-control" %>
      </div>

      <div class="form-group col-md">
        <%= form.label :addr2, "Address (cont.)" %>
        <%= form.text_field :addr2, class: "form-control" %>
      </div>

      <div class="form-group col-md">
        <%= form.label :city %>
        <%= form.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group col-md">
        <%= form.label :state %>
        <%= form.text_field :state, class: "form-control" %>
      </div>

      <div class="form-group col-md">
        <%= form.label :zip %>
        <%= form.number_field :zip, class: "form-control" %>
      </div>

      <div class="text-center py-4">
        <%= form.submit "Save Address", class: "btn btn-primary big-btn" %>
      </div>
    <% end %>
    <%= button_to "Delete", submit_home_patient_path, params: {reset: true}, method: :post, class: "btn btn-outline-light" %>
  </div>
</section>