<body>
  <div class="jumbotron welcome-bg">
    <main>
      <section class="p-4 text-center container centered-card">
        <div class="row p-lg-5 bg-dark rounded">
          <h1>Sign Up</h1>
          <%= form_with(model: @patient, local: true) do |form| %>
          <% if @patient.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@patient.errors.count, "error") %>
                prohibited this @patient from being saved:</h2>
              <ul>
                <% @patient.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="row">
            <div class="col">
              <div class="text-right">
                <%= form.label :first_name %>
              </div>
            </div>
            <div class="col">
              <%= form.text_field :first_name %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="text-right">
                <%= form.label 'Middle initial' %>
              </div>
            </div>
            <div class="col">
              <%= form.text_field :middle_init %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="text-right">
                <%= form.label :last_name %>
              </div>
            </div>
            <div class="col">
              <%= form.text_field :last_name %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="text-right">
                <%= form.label :phone %>
              </div>
            </div>
            <div class="col">
              <%= form.number_field :phone %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="text-right">
                <%= form.label :email %>
              </div>
            </div>
            <div class="col">
              <%= form.text_field :email %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="text-right">
                <%= form.label :password %>
              </div>
            </div>
            <div class="col">
              <%= form.password_field :password %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <div class="text-center">
                <%= form.submit "Submit",class:"btn btn-primary big-btn" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
    <%= link_to 'Back', root_url, class: "btn btn-secondary big-btn" %>
  </main>
</div>
</body>