<%= stylesheet_pack_tag 'styles/user', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container table-container pt-3">
  <h3>
    Appointments
  </h3>
  <% if @appointments.empty? %>
    <h3 class="text-center">
      <%= "Looks like there are no appointments for #{@patient.first_name}!" %>
    </h3>
  <% else %>
    <table class="table">
      <thead class="table-blue">
        <tr>
          <th>Driver</th>
          <th>Pick-up Date & Time</th>
          <th>Pick-up Location</th>
          <th>Destination</th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |a| %>
          <% if Time.parse(appointment.datetime).past? %>
            <% next %><% end %>
            <tr>
              <td>
                <% if a.status.unassigned? %>
                  <strong style="color:red">Unassigned</strong>
                <% else %>
                  <%= "#{a.driver.first_name} #{a.driver.middle_init} #{a.driver.last_name}" %>
                <% end %>
              </td>
              <td>
                <div class="container">
                  <div class="row">
                    <%= Time.parse(a.datetime).strftime("%a %b %d, %Y") %>
                  </div>
                  <div class="row">
                    <%= Time.parse(a.datetime).strftime("%I:%M %p") %>
                  </div>
                </div>
              </td>
              <td>
                <div class="row">
                  <%= appointment.location[0].name %>
                </div>
                <div class="row">
                  <%= appointment.location[0].addr1 %>
                </div>
                <div class="row">
                  <%= appointment.location[0].addr2 %>
                </div>
                <div class="row">
                  <%= "#{appointment.location[0].city}, #{appointment.location[0].state}, #{appointment.location[0].zip}" %>
                </div>
              </td>
              <td>
                <div class="row">
                  <%= appointment.location[1].name %>
                </div>
                <div class="row">
                  <%= appointment.location[1].addr1 %>
                </div>
                <div class="row">
                  <%= appointment.location[1].addr2 %>
                </div>
                <div class="row">
                  <%= "#{appointment.location[1].city}, #{appointment.location[1].state}, #{appointment.location[1].zip}" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>