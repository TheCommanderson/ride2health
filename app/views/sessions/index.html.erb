<head>
  <%= stylesheet_pack_tag 'styles/sessions', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<!-- Background image -->
<div class="jumbotron" id="bg-image">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class='navbar-brand' href="#">
        <img src="<%= asset_pack_path 'media/images/logo.png' %>" class="img-responsive img-logo"/>
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item mx-2 mt-1">
            <%= button_to 'About', about_sessions_path, method: "get", class:"btn btn-outline-light" %>
          </li>
          <li class="nav-item mx-2 mt-1">
            <%= button_to 'Get Involved', involved_sessions_path, method: "get", class:"btn btn-outline-light" %>
          </li>
          <li class="nav-item mx-2 mt-1">
            <%= button_to 'Volunteer Login', new_session_path, method: "get", params: {login_type:'v'}, class:"btn btn-outline-light" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <main>
    <section class="p-4 text-center container centered-card">
      <div class="row p-lg-5 bg-dark rounded">
        <h1 class="fw-light">Welcome to Ride2Health</h1>
        <p class="lead">
          Ride2Health is a website the provides rideshare to healthcare. For new accounts, please select 'Sign Up'. If you already have an account, click 'Login' to get started!
        </p>
        <p>
          <%= button_to 'Login', new_session_path, method: "get", params: {login_type:'p'}, class:"btn btn-light btn-lg my-2" %>
          <%= button_to 'Signup', new_patient_path, method: "get", class:"btn btn-outline-light btn-lg my-2" %>
        </p>
      </div>
    </section>
  </main>
</div>
<!-- Background image -->